# ===========================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ===========================================
# Bu dosyayı .env olarak kopyalayın: cp env.local.example .env

APP_NAME="Laravel Comment API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# ===========================================
# DATABASE - PostgreSQL (Local Development)
# ===========================================
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=laravel_api_local
DB_USERNAME=postgres
DB_PASSWORD=password

# ===========================================
# QUEUE - Database Driver (Local)
# ===========================================
QUEUE_CONNECTION=database
DB_QUEUE_TABLE=jobs
DB_QUEUE=default
DB_QUEUE_RETRY_AFTER=90

# ===========================================
# CACHE - Database Driver (Local PostgreSQL)
# ===========================================
CACHE_STORE=database
CACHE_PREFIX=laravel_cache

# ===========================================
# REDIS - Local Redis (Opsiyonel - Daha İyi Performans)
# ===========================================
# PostgreSQL ile birlikte Redis de kullanabilirsiniz:
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_DB=0

# ===========================================
# SESSION & LOGGING
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# BROADCASTING & MAIL
# ===========================================
BROADCAST_CONNECTION=log
MAIL_MAILER=log

# ===========================================
# COMMENT SYSTEM CONFIGURATION
# ===========================================
# Yasaklı kelimeler (virgülle ayrılmış)
BANNED_KEYWORDS="spam,badword,offensive,inappropriate,hate,violence"

# Cache süresi (dakika)
COMMENTS_CACHE_TTL=60

# ===========================================
# API RATE LIMITING
# ===========================================
# Comment oluşturma rate limit (dakika başına)
COMMENT_RATE_LIMIT=10

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
VITE_APP_NAME="${APP_NAME}"

# ===========================================
# LOKAL ÇALIŞTIRMA KOMUTLARI (PostgreSQL)
# ===========================================
# 1. PostgreSQL veritabanını oluşturun:
#    createdb laravel_api_local
# 2. composer install
# 3. cp env.local.example .env
# 4. php artisan key:generate
# 5. php artisan migrate --seed
# 6. php artisan serve
# 7. php artisan queue:work (ayrı terminal)
#
# PostgreSQL + Redis kullanmak için:
# 8. Redis'i başlatın: redis-server
# 9. .env dosyasında Redis ayarlarını aktifleştirin
