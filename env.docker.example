# ===========================================
# DOCKER PRODUCTION ENVIRONMENT
# ===========================================
# Bu dosya Docker ortamı için hazırlanmıştır
# Docker-compose.yml dosyası bu değerleri override eder

APP_NAME="Laravel Comment API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# ===========================================
# DATABASE - PostgreSQL (Docker Container)
# ===========================================
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=laravel_api
DB_USERNAME=laravel_user
DB_PASSWORD=laravel_password

# ===========================================
# QUEUE - Redis Driver (Docker)
# ===========================================
QUEUE_CONNECTION=redis
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE=default
REDIS_QUEUE_RETRY_AFTER=90

# ===========================================
# CACHE - Redis Driver (Docker)
# ===========================================
CACHE_DRIVER=redis
CACHE_STORE=redis
CACHE_PREFIX=laravel_cache
REDIS_CACHE_DB=1

# ===========================================
# REDIS - Docker Container
# ===========================================
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# ===========================================
# SESSION & LOGGING
# ===========================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# ===========================================
# BROADCASTING & MAIL
# ===========================================
BROADCAST_CONNECTION=redis
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@laravel-api.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# COMMENT SYSTEM CONFIGURATION
# ===========================================
# Yasaklı kelimeler (virgülle ayrılmış)
BANNED_KEYWORDS="spam,badword,offensive,inappropriate,hate,violence,scam,fake"

# Cache süresi (dakika)
COMMENTS_CACHE_TTL=120

# ===========================================
# API RATE LIMITING
# ===========================================
# Comment oluşturma rate limit (dakika başına)
COMMENT_RATE_LIMIT=5

# ===========================================
# SECURITY & PERFORMANCE
# ===========================================
# CORS ayarları
SANCTUM_STATEFUL_DOMAINS=localhost:8000
SESSION_SECURE_COOKIE=false

# Telescope ve Debugbar (production'da kapalı)
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# ===========================================
# DOCKER SPECIFIC SETTINGS
# ===========================================
# PHP ayarları
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=10M

# Nginx ayarları
NGINX_CLIENT_MAX_BODY_SIZE=10M

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
VITE_APP_NAME="${APP_NAME}"

# ===========================================
# DOCKER ÇALIŞTIRMA KOMUTLARI
# ===========================================
# 1. docker-compose up -d
# 2. docker-compose exec app php artisan key:generate
# 3. docker-compose exec app php artisan migrate --seed
# 4. Queue worker otomatik çalışır
